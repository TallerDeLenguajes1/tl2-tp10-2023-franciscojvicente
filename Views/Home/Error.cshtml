@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<head>
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Home")'; // Redirige a la página de inicio
        }, 5000); // 5000 milisegundos = 5 segundos
    </script>
</head>
<h1 class="text-danger">Error</h1>
<h2 class="text-danger">@ViewData["ErrorMessage"]</h2>

@* @if (Model.ShowRequestId)
