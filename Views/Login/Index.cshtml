@model LoginViewModel
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          Iniciar Sesión
        </div>
        <div class="card-body">
          <form asp-controller="Login" asp-action="Login" method="post">
            <div class="form-group">
              <label asp-for="@Model.NombreDeUsuario"></label>
              <input asp-for="@Model.NombreDeUsuario" class="form-control" />
              <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="@Model.Contrasenia"></label>
              <input asp-for="@Model.Contrasenia" class="form-control" type="password" />
              <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Iniciar Sesión</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }