@{
    ViewData["Title"] = "Home Page";
}

@model GetUsuariosViewModel

<div class="text-center">
    <h1 class="text-primary">Usuarios</h1>
</div>

<table class="table">
  <thead class="text-center">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nombre de Usuario</th>
      <th scope="col">Rol</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="text-center">
    @foreach (var usuario in Model.Usuarios) {
    <tr>
        <th scope="row">@usuario.Id</th>
        <th>@usuario.NombreDeUsuario</th>
        <th>@usuario.Rol</th>
        <td>
          <a class="text-decoration-none me-1 btn btn-primary" asp-controller="User" asp-action="UpdateUser" asp-route-idUser="@usuario.Id">Editar</a>
          <a class="text-decoration-none ms-1 btn btn-primary" asp-controller="User" asp-action="DeleteUser" asp-route-idUser="@usuario.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el usuario?')">Eliminar</a> 
        </td>
    </tr>
    }
  </tbody>
</table>
